<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Edit Project - Alif Dewantara</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
      crossorigin="anonymous"
    />
  </head>
  <body class="bg-dark">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary p-3">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">
          <img src="/images/logo.png" alt="logo-img" width="40" />
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item me-3">
              <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item me-3">
              <a
                class="nav-link active"
                aria-current="page"
                href="/form-blog"
              >Add Project</a>
            </li>
            <!-- <li class="nav-item me-3">
              <a class="nav-link" href="#">My Testimonial</a>
            </li> -->
          </ul>
          <!-- <button type="button" class="btn btn-warning">Contact Me</button> -->
          <a class="btn btn-warning" href="/contact">Contact Me</a>
        </div>
      </div>
    </nav>
    <!-- End Nav -->
    <main>
      <!-- BLOG FORM -->
      <section class="container my-4 p-4 card">
        <h1 class="text-center">EDIT MY PROJECT</h1>
        <form class="row g-2" method="post" action="edit-blog" enctype="multipart/form-data">
          <div class="col-12">
            <label for="projectName" class="form-label">Project Name</label>
            <input
              type="text"
              name="projectName"
              class="form-control"
              id="projectName"
              value="{{data.project_name}}"
            />
          </div>
          <div class="col-12">
            <label for="authorName" class="form-label">Author</label>
            <input
              type="text"
              name="authorName"
              class="form-control"
              id="authorName"
              value="{{userName}}"
              disabled
            />
          </div>
          <div class="col-md-6">
            <label for="startDate" class="form-label">Start Date</label>
            <input
              type="date"
              name="startDate"
              class="form-control"
              id="startDate"
              value="{{data.start_date}}"
            />
          </div>
          <div class="col-md-6">
            <label for="endDate" class="form-label">End Date</label>
            <input
              type="date"
              name="endDate"
              class="form-control"
              id="endDate"
              value="{{data.end_date}}"
            />
          </div>
          <div class="col-12">
            <label for="description" class="form-label">Description</label>
            <textarea
              name="description"
              id="description"
              rows="10"
              class="form-control"
            >{{data.description}}</textarea>
          </div>
          <div class="col-12">
            <label for="technologies">Technologies</label>
          </div>
          <div class="col-md-6">
            <div class="form-check">
              <input
                class="form-check-input"
                type="checkbox"
                name="inputNodejs"
                id="input-nodejs"
              />
              <label class="form-check-label" for="input-nodejs">
                Node JS</label>
            </div>
            <div class="form-check">
              <input
                class="form-check-input"
                type="checkbox"
                name="inputReactjs"
                id="input-reactjs"
              />
              <label class="form-check-label" for="input-reactjs">
                React JS</label>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-check">
              <input
                class="form-check-input"
                type="checkbox"
                name="inputVuejs"
                id="input-vuejs"
              />
              <label class="form-check-label" for="input-vuejs"> Vue JS</label>
            </div>
            <div class="form-check">
              <input
                class="form-check-input"
                type="checkbox"
                name="inputJavascript"
                id="input-javascript"
              />
              <label class="form-check-label" for="input-javascript">
                JavaScript</label>
            </div>
          </div>
          <div class="col-11 mb-3">
            <label for="inputImg" class="form-label">
              Thumbnail Image
            </label>
            <input
              class="form-control"
              type="file"
              id="inputImg"
              name="inputImg"
            />
          </div>
          {{!-- <div class="col-11 mb-3">
            <label for="inputImg" class="form-label">Image</label>
            <input class="form-control" type="text" id="inputImg" name="inputImg" placeholder="Insert Image URL Here" value="{{data.input_img}}"/>
          </div> --}}
          <div class="col-1 mb-3">
            <label for="ids" class="form-label">Ids</label>
            <input type="number" name="ids" class="form-control" id="ids" value="{{data.id}}">
          </div>
          <div class="col-12 d-md-flex justify-content-md-end">
            <button type="submit" class="btn btn-warning">Submit</button>
          </div>
        </form>
      </section>
    </main>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
      crossorigin="anonymous"
    ></script>
    <script>
      const fileInput = document.querySelector('input[type="file"]');

      const myFile = new File(['Hello World!'], '{{data.input_img}}', {
          lastModified: new Date(),
      });

      const dataTransfer = new DataTransfer();
      dataTransfer.items.add(myFile);
      fileInput.files = dataTransfer.files;

  </script>
  </body>
</html>